pipeline {
    agent any

    tools {
        nodejs 'nodejs'
    }

    environment {
        VERSION_NUMBER = '1.0'
    }

    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/Vinge1718/yolo.git'
            }
        }
        stage('Building the project') {
            steps {
                sh 'npm install'
            }
        }
        stage('Testing the project') {
            steps {
                sh 'npm test'
            }
        } 
    } 
}    